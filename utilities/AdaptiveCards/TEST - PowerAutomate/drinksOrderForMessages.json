{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.0",
    "body": [
        {
            "type": "RichTextBlock",
            "inlines": [
                {
                    "type": "TextRun",
                    "text": "*Drinks Order*"
                }
            ]
        },
        {
            "type": "TextBlock",
            "text": "Would you like a drink?",
            "wrap": true
        },
        {
            "id": "DrinkType",
            "type": "Input.ChoiceSet",
            "choices": [
                {
                    "title": "None",
                    "value": "None",
                    "default": true
                },
                {
                    "title": "Tea",
                    "value": "Tea"
                },
                {
                    "title": "Coffee",
                    "value": "Coffee"
                },
                {
                    "title": "Hot Chocolate",
                    "value": "Hot Chocolate"
                }
            ],
            "placeholder": "Drink Type"
        },
        {
            "type": "TextBlock",
            "text": "Milk?",
            "wrap": true
        },
        {
            "id": "MilkBoolean",
            "type": "Input.ChoiceSet",
            "choices": [
                {
                    "title": "Yes",
                    "value": "Yes"
                },
                {
                    "title": "No",
                    "value": "No"
                }
            ],
            "placeholder": "Milk?"
        },
        {
            "type": "TextBlock",
            "text": "Sugar",
            "wrap": true
        },
        {
            "id": "SugarCount",
            "type": "Input.Number",
            "placeholder": "Sugar Spoonfuls",
            "minimum": 0,
            "maximum": 3
        }
    ]
}